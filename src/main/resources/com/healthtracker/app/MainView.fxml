<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f4f7;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.healthtracker.controller.MainController">
    <top>
        <StackPane alignment="CENTER_LEFT" style="-fx-background-color: #00796B; -fx-padding: 15;">
            <Label fx:id="welcomeLabel" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </StackPane>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Статистика">
                    <content>
                        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                            <content>
                                <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;">
                                    <Label text="Графики и Статистика" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #00796B;" />

                                    <VBox fx:id="chartsContainer" spacing="30.0" alignment="TOP_CENTER"
                                          style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                                        <padding>
                                            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                                        </padding>
                                    </VBox>

                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>


                <Tab text="Вес">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white;">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <Label text="Логирование Веса" style="-fx-font-weight: bold; -fx-text-fill: #00796B;">
                                <font>
                                    <Font size="20.0" />
                                </font>
                            </Label>


                            <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10; -fx-background-color: #e0f2f1; -fx-border-radius: 8;">
                                <Label text="Вес (кг):" />
                                <TextField fx:id="weightInput" promptText="Например, 75.5" style="-fx-min-width: 120;" />

                                <Label text="Дата:" />
                                <DatePicker fx:id="logDatePicker" style="-fx-min-width: 120;" />

                                <Button onAction="#handleAddWeight" text="Сохранить" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                            </HBox>

                            <Label fx:id="weightStatusLabel" text="" style="-fx-text-fill: #D32F2F;" />

                            <HBox alignment="CENTER" spacing="40.0" style="-fx-padding: 10; -fx-background-color: #e8f5e9; -fx-border-color: #4CAF50; -fx-border-width: 1; -fx-border-radius: 5;">
                                <VBox alignment="CENTER">
                                    <Label text="Начальный Вес:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="startWeightLabel" text="-" style="-fx-text-fill: #004D40;">
                                        <font><Font size="16.0" /></font>
                                    </Label>
                                </VBox>
                                <VBox alignment="CENTER">
                                    <Label text="Текущий Вес:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="latestWeightLabel" text="-" style="-fx-text-fill: #00796B;">
                                        <font><Font size="16.0" /></font>
                                    </Label>
                                </VBox>
                                <VBox alignment="CENTER">
                                    <Label text="Цель:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="targetWeightLabel" text="-" style="-fx-text-fill: #D84315;">
                                        <font><Font size="16.0" /></font>
                                    </Label>
                                </VBox>
                                <VBox alignment="CENTER">
                                    <Label text="ИМТ:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="bmiLabel" text="-" style="-fx-text-fill: #1976D2;">
                                        <font><Font size="16.0" /></font>
                                    </Label>
                                </VBox>
                            </HBox>

                            <Label text="История Измерений" style="-fx-font-weight: bold; -fx-text-fill: #00796B;">
                                <font>
                                    <Font size="16.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin>
                            </Label>
                            <TableView fx:id="weightLogTable" VBox.vgrow="ALWAYS" prefHeight="200.0" prefWidth="760.0">
                                <columns>
                                    <TableColumn fx:id="colLogDate" prefWidth="150.0" text="Дата" />
                                    <TableColumn fx:id="colCurrentWeight" prefWidth="150.0" text="Вес (кг)" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>

                            <HBox alignment="CENTER_RIGHT">
                                <Button fx:id="deleteLogButton" onAction="#handleDeleteWeightLog" text="Удалить выбранную запись" disable="true" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                                    <HBox.margin>
                                        <Insets top="5.0" />
                                    </HBox.margin>
                                </Button>
                            </HBox>

                        </VBox>
                    </content>
                </Tab>


                <Tab text="Питание">
                    <content>
                        <Label text="Секция для учета калорий и макросов" />
                    </content>
                </Tab>
                <Tab text="Активность">
                    <content>
                        <Label text="Секция для учета тренировок" />
                    </content>
                </Tab>
                <Tab text="Настройки">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white;">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <Label text="Настройки Пользователя" style="-fx-font-weight: bold; -fx-text-fill: #00796B;">
                                <font><Font size="20.0" /></font>
                            </Label>

                            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10; -fx-background-color: #e0f2f1; -fx-border-radius: 8;">
                                <VBox spacing="10.0">
                                    <Label text="Имя:" />
                                    <Label text="Рост (см):" />
                                    <Label text="Начальный Вес (кг):" />
                                    <Label text="Целевой Вес (кг):" />
                                    <Label text="Уровень Активности:" />
                                </VBox>
                                <VBox spacing="5.0">
                                    <TextField fx:id="settingsNameInput" prefWidth="200.0" />
                                    <TextField fx:id="settingsHeightInput" prefWidth="200.0" />
                                    <TextField fx:id="settingsStartWeightInput" prefWidth="200.0" />
                                    <TextField fx:id="settingsTargetWeightInput" prefWidth="200.0" />
                                    <ChoiceBox fx:id="settingsActivityChoice" prefWidth="200.0" />
                                </VBox>
                            </HBox>

                            <Button onAction="#handleSaveSettings" text="Сохранить Изменения" style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin>
                            </Button>

                            <Label fx:id="settingsStatusLabel" text="" style="-fx-text-fill: #00796B;" />

                        </VBox>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </center>
</BorderPane>